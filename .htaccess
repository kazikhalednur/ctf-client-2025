<IfModule mod_rewrite.c>

    # Enable the rewrite engine
    RewriteEngine On

    # Set the base directory if necessary
    RewriteBase /

    # Static file rewrites
    RewriteRule ^speakers$ /speakers.html [L]
    RewriteRule ^speakers/(.*)$ /speakers/$1.html [L]
    RewriteRule ^organizers$ /organizers.html [L]
    

    # Allow API requests to pass through (adjust if necessary for Next.js API routes)
    RewriteCond %{REQUEST_URI} ^/api/ [NC]
    RewriteRule ^(.*)$ - [L]

    # Handle dynamic routes and requests to the Next.js app
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ /index.js [L]  # Ensure this points to your Next.js entry file or directory (e.g., .next)

    # Error handling
    ErrorDocument 404 /404.html

</IfModule>

<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

